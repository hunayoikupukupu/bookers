<div class="full_box">
  
  <h1>Editing Book</h1>
  
  <div class="edit_box">
    
    <%= form_with model: @book do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      
      <div class="edit_body">
        <h4>Body</h4>
        <%= f.text_area :body %>
      </div>
      
      <%= f.submit 'Update Book' %>
    
    <% end %>
  </div>
  
  <span>
    <%= link_to "Show", book_path(@book.id) %>
  </span>
  <span>|</span>
  <span>
    <%= link_to "Back", '/books' %>
  </span>

</div>