<div class="full_box">
  
  <div class="index_flash_message">
  <%= flash[:notice] %>
  </div>

  <h1>Books</h1>
  
  <table class="book_table">
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
    
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %>&emsp;</td>
        <td><%= book.body %></td>
        <td>
          &emsp;
          <%= link_to "Show", book_path(book.id) %>&emsp;
          <%= link_to "Edit", edit_book_path(book.id) %>&emsp;
          <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
        </td>
      </tr>
    
    <% end %>
  </table>
  
  
  <div class="new_box">
    
    <h2 class="new_heading">New Book</h2>
    
    <% if @book.errors.any? %>
      <div class="error_box">
      
        <div class="error_heading">
          &emsp;<%= @book.errors.count %> error prohibited this book from being saved:
        </div> 
        
        <div class="error_message">
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
    
    <%= form_with model: @book, url: '/books', method: :post do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>
      
      <div class="new_body">
        <p>Body</p>
        <%= f.text_area :body %>
      </div>
      
      <p><%= f.submit ' Create Book ' %></p>
    
    <% end %>
  
  </div>

</div>